<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/id_task_image_photo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        fresco:placeholderImage="@drawable/info_photo"
        />

    <TextView
        android:id="@+id/id_task_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/id_task_image_photo"
        android:text="姓名："
        android:textSize="28sp" />

    <TextView
        android:id="@+id/id_task_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id_task_image_photo"
        android:layout_alignLeft="@+id/id_task_tv_name"
        android:text="账号："
        android:textSize="20sp" />


</RelativeLayout>