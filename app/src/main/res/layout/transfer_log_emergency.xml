<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/spacer"
    android:orientation="vertical"
    android:showDividers="middle" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="紧急事件"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:id="@+id/id_transfer_emergency_liner_finished"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_emergency_tv_finished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已完成工作："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/id_emergency_et_finished"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/id_transfer_emergency_liner_unfinished"
            android:layout_below="@+id/id_transfer_emergency_liner_finished"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_emergency_tv_unfinished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未完成工作："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/id_emergency_et_unfinished"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/id_transfer_emergency_liner_remark"
            android:layout_below="@+id/id_transfer_emergency_liner_unfinished"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_emergency_tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/id_emergency_et_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="4"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/id_transfer_emergency_liner_pics"
            android:layout_below="@+id/id_transfer_emergency_liner_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_emergency_tv_pics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/id_emergency_et_pics"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            
            <ImageView
                android:id="@+id/id_emergency_imgview_pics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pic_select"
                />
        </LinearLayout>
    </RelativeLayout>

    <Button 
        android:layout_marginTop="20dp"
        android:id="@+id/id_transfer_emergency_btn_submit"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        />
    
</LinearLayout>