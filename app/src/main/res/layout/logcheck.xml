<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <EditText
        android:id="@+id/id_logcheck_search_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/id_logcheck_search_btn"
        android:layout_alignBaseline="@+id/id_logcheck_search_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="输入用户名检索用户"
        />

    <Button
        android:id="@+id/id_logcheck_search_btn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="查询"
        />

    <ListView
        android:id="@+id/id_logcheck_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_logcheck_search_et"
        android:layout_marginTop="10dp" >
    </ListView>

</RelativeLayout>
